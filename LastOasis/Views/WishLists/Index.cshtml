@model IEnumerable<LastOasis.Models.WishList>

@{
    ViewBag.Title = "Wish List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <h2>Wish List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Film.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Film.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.wishId }) |
            @Html.ActionLink("Details", "Details", new { id=item.wishId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.wishId })
        </td>
    </tr>
}

</table>
